{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>

	<table class="table">
		<tbody>
			{% if app.user and is_granted('ROLE_ADMIN') %}
				<tr>
					<th>Id</th>
					<td>{{ article.id }}</td>
				</tr>
				{%endif%}
				<tr>
					<th>Author</th>
					<td>{{ article.author }}</td>
				</tr>
				<tr>
					<th>Date</th>
					<td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
				</tr>
				<tr>
					<th>Title</th>
					<td>{{ article.title }}</td>
				</tr>
				<tr>
					<th>Content</th>
					<td>{{ article.content }}</td>
				</tr>
				<tr>
					<th>Description</th>
					<td>{{ article.description }}</td>
				</tr>
				<tr>
					<th>Category</th>
					<td>{{ article.category }}</td>
				</tr>
			</tbody>
		</tbody>
	</table>

	<a href="{{ path('articles_index') }}">back to list</a>
	{% if app.user and is_granted('ROLE_ADMIN') %}
		<a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>
		{{ include('articles/_delete_form.html.twig') }}
		{%endif%}

	{% endblock %}
