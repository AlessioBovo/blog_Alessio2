{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>
	<tbody>
		<div class="row">

			{% for article in articles %}
				<tr>
					<div class="col-sm-3">
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{ article.title}}</h5>
								<h6 class="card-subtitle mb-2 text-muted">
									{{ article.author}}</h6>
								<h6 class="card-subtitle mb-2">
									{{ article.category}}</h6>


								<p class="card-text">{{ article.description}}</p>

								<a class="card-link" href="{{ path('articles_show', {'id': article.id}) }}">Voir</a>
								{% if app.user and is_granted('ROLE_ADMIN') %}
									/
									<a class="card-link" href="{{ path('articles_edit', {'id': article.id}) }}">Modifier</a>
									{%endif%}
								</div>


							</div>
						</div>
					{% endfor %}
				</tr>
			</div>
		</tr>
	</tbody>
</tr></tbody></tbody></table>{% if app.user and is_granted('ROLE_ADMIN') %}<a href="{{ path('articles_new') }}">Nouveau</a>{%endif%}{% endblock %}
