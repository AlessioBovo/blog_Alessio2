{% extends 'base.html.twig' %}

{% block title %}Articles
{% endblock %}

{% block body %}
	<h1>Articles</h1>

	<table class="table">
		<thead>
			<tr>
				{% if app.user and is_granted('ROLE_ADMIN') %}
					<th>Id</th>
					{%endif%}
					<th>Author</th>
					<th>Date</th>
					<th>Title</th>
					<th>Content</th>
					<th>Description</th>
					<th>Category</th>
					<th>actions</th>
				</tr>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					{% if app.user and is_granted('ROLE_ADMIN') %}
						<td>{{ article.id }}</td>
						{%endif%}
						<td>{{ article.author }}</td>
						<td>{{ article.date ? article.date|date('Y-m-d') : '' }}</td>
						<td>{{ article.title }}</td>
						<td>{{ article.content }}</td>
						<td>{{ article.description }}</td>
						<td>{{ article.category }}</td>
						<td>
							<a href="{{ path('articles_show', {'id': article.id}) }}">show</a>
							{% if app.user and is_granted('ROLE_ADMIN') %}

								<a href="{{ path('articles_edit', {'id': article.id}) }}">edit</a>
								{%endif%}
							</td>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="8">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</tbody>
	</table>
	{% if app.user and is_granted('ROLE_ADMIN') %}
		<a href="{{ path('articles_new') }}">Create new</a>
		{%endif%}
	{% endblock %}
