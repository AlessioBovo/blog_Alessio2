{% extends 'base.html.twig' %}

{% block title %}Commentaires
{% endblock %}

{% block body %}
	<h1>Commentaires</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ comment.id }}</td>
			</tr>
			<tr>
				<th>Contenu</th>
				<td>{{ comment.content }}</td>
			</tr>
			<tr>
				<th>Date de création</th>
				<td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('comments_index') }}">Retour à la liste</a>

	<a href="{{ path('comments_edit', {'id': comment.id}) }}">modifier</a>

	{{ include('comments/_delete_form.html.twig') }}
{% endblock %}
