{% extends 'base.html.twig' %}

{% block title %}Commentaire
{% endblock %}

{% block body %}
	<h1>Commentaire</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Content</th>
				<th>Creation_date</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for comment in comments %}
				<tr>
					<td>{{ comment.id }}</td>
					<td>{{ comment.content }}</td>
					<td>{{ comment.creationDate ? comment.creationDate|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('comments_show', {'id': comment.id}) }}">show</a>
						<a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">Aucun Commentaire trouv√©e</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('comments_new') }}">Create new</a>
{% endblock %}
